/*CARRITO*/
.Carrito
	display none

@media screen and (min-width:1050px)
	.Carrito
		display inline-block
		width 100%
		height 55px
		position fixed
		bottom 0
		left 0
		right 0
		background $fucsia
		text-align center
		
		&-img
			vertical-align middle
		
		&-desc
			display inline-block
			font-family 'lobster_1.4regular'
			font-weight 700
			font-size 1.62em
			color $white
			margin 0
			margin-left 20px
			vertical-align middle
			
		&-txt
			display inline-block
			font-family 'pathway_gothic_oneregular'
			font-size 1.31em
			vertical-align middle
			color $white
			margin 0 20px 
			
		&-btn
			display inline-block
			vertical-align middle
			cursor pointer
			margin 0 10px
			font-family 'lobster_1.4regular'
			color $white
			font-size 1.31em
			
		&-icon
		&-btnTxt
			display inline-block
			vertical-align middle
			
		&-btnTxt
			margin-left 10px