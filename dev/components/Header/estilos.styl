/*HEADER*/

.Header
	display inline-block
	width 100%
	height 141px
	background-image url('../images/01-index/bg-header.jpg')
	background-repeat no-repeat
	background-size auto
	text-align center
	
	&-izq
		float left
		display inline-block
		width 407px
		
	&-der
		float right
		display inline-block
		width 407px
		
	&-registro
		height 54px
		line-height 54px
		text-align left
		display inline-block
		float left
		
		& .Header-btn:nth-child(2)
			margin-left 15px
		
	&-contacto
		height 54px
		line-height 54px
		text-align right
		display inline-block
		float right
	
	&-contactoTxt
		font-family 'pathway_gothic_oneregular'
		font-size 1.25em //20px
		font-weight 400
		color $white

	&-btn
		cursor pointer
		margin-left 5px
		font-family 'pathway_gothic_oneregular'
		font-size 1.25em //20px
		font-weight 400
		color $white
	
	&-menuIzq
	&-menuDer
		display flex
		width 407px
		align-items center
		justify-content space-between
		flex-flow row nowrap
		margin-top 10px

	&-menuIzq		
		float left		
		
	&-menuDer		
		float right
		
		
	&-menuBtn
		cursor pointer		
		font-family 'pathway_gothic_oneregular'
		font-size 1.25em
		font-weight 400
		color $white
		max-width 95px
		display inline-block
		// margin 0 1em
	
	&-btnImg
		width 21px
		height 21px
		

	&-logoLink
		display inline-block
		width 235px
		height 207px		
		background-image url('../images/01-index/logo-designarte.png')
		background-repeat no-repeat
		background-size 100% 100%
		float left
	
	&-logo
		text-indent -9999px
		margin 0
		
	&-busqRed
		float left
		margin-top -70px
		
	&-form
		display inline-block
		float left

	&-label
		font-family 'lobster_1.4regular'
		color $gray
		font-size 1.56em
		
	&-input
		width 224px
		font-size 1.12em
		font-family 'corbelitalic'
		margin-left 5px
		padding .2em
		vertical-align middle
		border none
		border 1px solid $light_gray
		height 35px
		box-sizing border-box
	&-formBtn
		cursor pointer
		display inline-block
		width 59px
		height 35px
		vertical-align middle
		
	&-redes
		display inline-block
		float right
