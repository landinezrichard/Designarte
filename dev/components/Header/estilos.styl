/*Tablet Landscape*/
@media screen and (min-width:1050px)
	.Header
		height 141px
		background url('../images/01-index/bg-header.jpg')
		background-repeat no-repeat
		background-size auto
		position static
		border-bottom none
		
		& > .u-centrar
			line-height inherit
		
		&-izq
			width 407px
			
		&-der
			width 407px
			text-align center
			
		&-menuMovil
		&-mainMenu
			display none
			
		&-contactoMovil
			display none !important
		
		&-registro
			height 54px
			line-height 54px
			text-align left
			display inline-block
			float left
			
			& .Header-btn:nth-child(2)
				margin-left 15px
		&-contacto
			height 54px
			line-height 54px
			text-align right
			display inline-block
			float right
				
		&-menuIzq
		&-menuDer
			display flex
			width 407px
			align-items center
			justify-content space-between
			flex-flow row nowrap
			margin-top 10px
			
		&-logoLink
			display inline-block
			width 216px
			height 198px
			background-image url('../images/01-index/logo-designarte.png')
			background-repeat no-repeat
			background-size 100% 100%
			float left
			
		&-btn
			margin 0
			margin-left 5px