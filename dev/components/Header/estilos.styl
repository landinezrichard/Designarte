/*HEADER*/

.Header
	display inline-block
	width 100%	
	text-align center
	background $fucsia2
	height 60px
	z-index 17
	position fixed
	top 0
	left 0
	right 0
	border-bottom 4px solid $ocre2
	
	& > .u-centrar
		line-height 60px
	
	&-izq
		float left
		
	&-der
		float right
		text-align right

	&-izq
	&-der
		display inline-block
		width 128px
		
	&-menuMovil
		display inline-block
		float left
		// width 100%
		margin-left 10px
	
	&-btnMovil
		display inline-block
		cursor pointer
		width 30px
		margin 0 5px
		position relative
		
	&-btnMovil--small
		display inline-block
		cursor pointer
		width 24px
		margin 0 5px
		
	&-movImg
		vertical-align middle
		
	&-mainMenu
		display inline-block
		cursor pointer
		width 30px
		margin-right 10px
		
	&-contactoMovil
		display none
		width 100%
		background $pink
		position fixed
		top 64px
		left 0
		right 0
		
		
	&-registro
	&-contacto		
		display none
		
	
	&-contactoTxt
		font-family 'pathway_gothic_oneregular'
		font-size 1.25em //20px
		font-weight 400
		color $white

	&-btn
		cursor pointer
		margin 0 15px		
		font-family 'pathway_gothic_oneregular'
		font-size 1.25em
		font-weight 400
		color $white
	
	&-menuIzq
	&-menuDer
		display none

	&-menuIzq
		float left		
		
	&-menuDer		
		float right
		
		
	&-menuBtn
		cursor pointer		
		font-family 'pathway_gothic_oneregular'
		font-size 1.25em
		font-weight 400
		color $white
		max-width 95px
		display inline-block
		// margin 0 1em
	
	&-btnImg
		width 21px
		height 21px
		vertical-align middle
		
	&-btnTxt
		vertical-align middle
		

	&-logoLink
		display inline-block
		width 73px
		height 48px
		background-image url('../images/01-index/logo-designarte_movil.jpg')
		background-repeat no-repeat
		background-size 100% auto
		vertical-align middle		
	
	&-logo
		text-indent -9999px
		margin 0
		
	&-alerta
		width 20px
		height 20px
		position absolute
		top 4px
		right 0
		background $green
		color $white
		border-radius 50%
		font-size 0.81em
		line-height 20px		
	
